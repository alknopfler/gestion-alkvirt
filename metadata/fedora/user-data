#cloud-config
# usuario fedora
password: password
ssh_pwauth: True
chpasswd: { expire: False }
locale: es_ES.UTF-8

bootcmd:
 - echo 192.168.2.67 puppet alkvirt alkvirt.local.domain > /etc/hosts

runcmd:
 - [ yum, -y, "install", "puppet", "ntp" ]
 - [ sh, -xc, "echo 127.0.0.1 `hostname` >> /etc/hosts" ]
 - [ puppet, agent, --enable ]
 - [ puppet, agent, -t ]
